{
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "dist",
        //"allowJs": true,
        //"target": "es6"
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        // "lib": [
        //     //"dom",
        //     //"es2015"
        //     "es6"
        // ],
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "include": [
        "./src/**/*"
    ]
}